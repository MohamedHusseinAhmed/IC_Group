<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/home_background"
    android:fillViewport="false">

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:background="@drawable/home_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/activity_horizontal_margin">


    <ImageButton
        android:id="@+id/homeBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="74dp"
        android:layout_y="100dp"
        android:background="@drawable/home_logo" />

    <ImageButton
        android:id="@+id/remote"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="330dp"
        android:layout_y="250dp"
        android:background="@drawable/remote" />

    <ImageButton
        android:id="@+id/air"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="554dp"
        android:layout_y="100dp"
        android:background="@drawable/air" />

    <ImageButton
        android:id="@+id/light"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="232dp"
        android:layout_y="100dp"
        android:background="@drawable/lamp" />

    <ImageButton
        android:id="@+id/setting"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="494dp"
        android:layout_y="250dp"
        android:background="@drawable/set" />

    <ImageButton
        android:id="@+id/cam"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="150dp"
        android:layout_y="250dp"
        android:background="@drawable/intercom" />

    <ImageButton
        android:id="@+id/secure"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="397dp"
        android:layout_y="100dp"
        android:background="@drawable/secure" />


</AbsoluteLayout>
</ScrollView>